<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeOverlay.MaterialComponents.Dark">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme.Toolbar</item>

    </style>

    <style name="AuthButtonStyle" parent="AppTheme" >
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/black_rounded_corners_border_shape</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@android:color/holo_blue_bright</item>
    </style>


</resources>